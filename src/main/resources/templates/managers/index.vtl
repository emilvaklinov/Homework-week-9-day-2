<p class="pageHeader">Manager</p>

<table>

    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Salary</th>
        <th>Budget</th>
        <th>Department</th>

    </tr>
    #foreach($manager in $managers)
    <tr>
        <td>$manager.getFirstName()</td>
        <td>$manager.getLastName()</td>
        <td>$manager.getSalary().intValue()</td>
        <td>$manager.getBudget().intValue()</td>
        <td>$manager.getDepartment().getTitle()</td>

    </tr>

</table>

<form action="/managers/$manager.getId()/edit" method="get">
    <input type="submit" value="Update" class="button">
</form>
</td>
<td>
    <form action="/managers/$manager.getId()/delete" method="post">
        <input type="submit" value="Delete" class="button">
    </form>
</td>

</tr>
#end

</table>

<form action="/managers/new" method="get">
    <input type="submit" value="Add manager" class="button">
</form>